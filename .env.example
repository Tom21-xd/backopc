# Configuración del servidor
PORT=3000
NODE_ENV=development

# Configuración de la base de datos
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=gas_monitoring_system

# Configuración JWT
JWT_SECRET=change_this_to_a_secure_secret_key
JWT_EXPIRES_IN=24h

# Configuración de correo electrónico
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_FROM=Sistema de Monitoreo de Gas <noreply@example.com>

# Configuración de WebSocket para tiempo real
WS_PORT=3001

# Configuración del simulador de sensores
MOCK_SENSOR_ENABLED=true
DEFAULT_SENSOR_READING_INTERVAL=5000

# Información de la empresa (para notificaciones y contacto)
COMPANY_NAME=Your Company Name
COMPANY_EMAIL=support@yourcompany.com
COMPANY_PHONE=+1234567890